{
  "name": "cablycode",
  "version": "1.0.0",
  "description": "CablyCode - A modern code editor",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "if not exist public\\vs mkdir public\\vs && xcopy /E /I /Y node_modules\\monaco-editor\\min\\vs public\\vs",
    "build": "electron-builder -w",
    "pack": "electron-builder --dir",
    "prepare-icons": "node scripts/prepare-icons.js",
    "dist": "electron-builder",
    "publish": "electron-builder -p always"
  },
  "build": {
    "appId": "com.cablycode.editor",
    "productName": "CablyCode",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "public/vs",
        "to": "public/vs"
      },
      {
        "from": "image.png",
        "to": "image.png"
      },
      {
        "from": "node_modules/ffmpeg-static/ffmpeg.exe",
        "to": "ffmpeg.exe"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "image.png"
    },
    "portable": {
      "artifactName": "CablyCode-Portable-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CablyCode",
      "uninstallDisplayName": "CablyCode",
      "artifactName": "CablyCode-Setup-${version}.exe"
    },
    "asar": true,
    "compression": "maximum"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cablycode.git"
  },
  "keywords": [
    "editor",
    "code",
    "electron"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "electron-reloader": "^1.2.3",
    "electron-updater": "^6.1.7",
    "jimp": "^0.22.12",
    "png-to-ico": "^2.1.8",
    "sharp": "^0.32.6",
    "to-ico": "^1.1.5"
  },
  "dependencies": {
    "conf": "^10.2.0",
    "dot-prop": "^6.0.1",
    "electron-debug": "^3.2.0",
    "electron-log": "^5.0.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "ffmpeg-static": "^5.2.0",
    "is-obj": "^2.0.0",
    "monaco-editor": "^0.45.0",
    "pkg-up": "^3.1.0",
    "winreg": "^1.2.5"
  }
}
